<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Prompt:wght@100;200;300;400;500;600;700;800;900&family=Staatliches&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="CSS/style.css" />
    <link rel="stylesheet" href="CSS/modal.css" />
    <link rel="icon" type="image/x-icon" href="Images/icon.svg" />
    <script
      src="https://kit.fontawesome.com/86a1a962fc.js"
      crossorigin="anonymous"
    ></script>
    <title>Financee</title>
  </head>

  <body>
    <nav class="navbar navbar-lg bg-dark fixed-top navbar-custom">
      <p class="navbar-brand nav-brand" style="margin: 0">
        <i
          class="fa-solid fa-coins"
          style="margin: 0 10px 0 0; color: white"
        ></i
        >FINANCE RECORDS
      </p>
      <div style="background-color: inherit">
        <% if (typeof user == 'object' && user) { %>
        <a> Welcome, <%= user.email %> </a>
        <% }%>
        <button
          id="save"
          form="calcul"
          type="submit"
          class="btn customlg-button"
        >
          SAVE
        </button>
        <button
          type="button"
          id="myBtn"
          class="btn customlg-button"
          onclick="modall()"
        >
          LOAD
        </button>
        <div id="myModal" class="modal">
          <div class="modal-content">
            <span class="close">&times;</span>
            <% if (typeof user == 'object' && user) { %>
            <p>Your Unique id <%=user.id%></p>
            <% }%>
            <p>Your Records:</p>
            <p id="activity">Empty</p>
          </div>
        </div>

        <button type="button" class="btn customlg-button">
          <a href="logout">LOGOUT</a>
        </button>
      </div>
    </nav>
    <div class="main-container">
      <div class="navigation-tabs">
        <ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
          <li class="nav-item text-center">
            <a
              class="nav-link active nav-buttons"
              id="Income"
              data-toggle="tab"
              href="#income-tab"
              role="tab"
              aria-controls="income-tab"
              aria-selected="true"
              >Income</a
            >
          </li>
          <li class="nav-item text-center inactive nav-button">
            <a
              class="nav-link nav-buttons"
              id="Expenses"
              data-toggle="tab"
              href="#expense-tab"
              role="tab"
              aria-controls="expense-tab"
              aria-selected="false"
              >Expenses</a
            >
          </li>
          <li class="nav-item text-center inactive nav-button">
            <a
              class="nav-link nav-buttons"
              id="Transfers"
              data-toggle="tab"
              href="#transfers-tab"
              role="tab"
              aria-controls="transfer-tab"
              aria-selected="false"
              >Transfers</a
            >
          </li>
        </ul>
      </div>
      <%- include ('form.ejs') %>
    </div>
    <script></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.0.0-alpha.1/axios.min.js"
      integrity="sha512-xIPqqrfvUAc/Cspuj7Bq0UtHNo/5qkdyngx6Vwt+tmbvTLDszzXM0G6c91LXmGrRx8KEPulT+AfOOez+TeVylg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="JS/functionality.js"></script>
  </body>
</html>
